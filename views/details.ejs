<i class="material-icons" style="font-size: 32px;">card_membership</i>
<p>Most Purchased</p>
<span class="badge badge-info"><%=mostBoughtGame%></span>
</div>
</div>
</div>
</div>
</div>
<div class="container">
<div class="totalComments">
<div class="text-center">
<div class="card" style="width: 9em;left: 35em;bottom: 26em;">
<div class="card-body">
<i class="material-icons" style="font-size: 32px;">comment</i>
<h5 class="responsive-text">Total Comments</h5>
<span class="badge badge-info"><%=totalComments%></span>
<br>
<br>
<div class="text-center">
<a href="/showComments"><i class="material-icons">swap_horiz</i></a>
</div>
</div>
</div>
</div>
</div>
</div>
<a href="/details" class="btn" style="position: relative;left: 30em;font-size: 35px;"><i class="material-icons">replay</i></a>
<%for(var i=0;i< replies.length;i++){%>
<%for(var j=0;j< replies[i].comment.length;j++){%>
<div class="container">
<div class="commentReplies">
<table class="table">
<thead class="thead-dark">
<th scope="col">Comments</th>
<th scope="col">Replies</th>
</thead>
<tbody>
<%for(var k=0;k< replies.length;k++){%>
<%for(var m=0;m < replies[k].comment.length;m++){%>
<%for(var n=0;n< replies[k].comment[m].reply.length;n++){%>
<td><%=replies[i].comment[j].comment%></td>
<td><%=replies[i].comment[m].reply[n].reply%></td>
</tbody>
</table>
</div>
</div>
<%}%>
<%}%>
<%}%>
<%}%>
<%}%>
<div class="card" style="width: 600px;position: relative;bottom: 28em;left: 35em;">
<canvas id="myChart" width="320px"></canvas>
<h5 class="text-center">Total Purchases</h5>
</div>
<script>
var myChart = document.getElementById("myChart").getContext("2d");
var newChart = new Chart(myChart,{
    type:"pie",
    data:{
        labels:["Total Purchased"],
        datasets:[{
            label:"Total Purchases",
            data:['<%=totalBought%>'],
            backgroundColor:["rgba(82, 211, 45, 0.7)"],
            hoverBorderWidth:2,
            borderColor:"#000000"
        }]
    }
});
</script>
<div class="container">
<div class="card" style="width: 600px;position: relative;bottom: 45em;right: 10em;">
<div class="text-center">Total Orders</div>
<div class="card-body">
<canvas id="myTotalOrderChart"></canvas>
</div>
</div>
</div>
<script>
var date = []
'<%date.forEach(function(date){%>'
date.push(new Date('<%=date.date%>').getMonth())

'<%})%>'
for(var i=0;i<date.length;i++){
    if(date[i]==0){
        date[i] = "January"
    }
    if(date[i]==1){
        date[i] = "Februrary"
    }
    if(date[i]==2){
        date[i] = "March"
    }
    if(date[i]==3){
        date[i] = "April"
    }
    if(date[i]==4){
        date[i] = "May"
    }
    if(date[i]==5){
        date[i] = "June"
    }
    if(date[i]==6){
        date[i] = "July"
    }
    if(date[i]==7){
        date[i] = "August"
    }
    if(date[i]==8){
        date[i] = "September"
    }
    if(date[i]==9){
        date[i] = "October"
    }
    if(date[i]==10){
        date[i] = "November"
    }
    if(date[i]==11){
        date[i] = "December"
    }
    

var orders = [];
'<%date.forEach(function(order){%>'
orders.push('<%=order.totalqty%>')
'<%})%>'
var myTotalOrderChart = document.getElementById("myTotalOrderChart").getContext("2d");
var orders = new Chart(myTotalOrderChart,{
        type:'line',
        data:{
            labels:[] = date,
            datasets:[{
                label:"Total Orders per month",
                data:[] = orders,
                backgroundColor:["rgba(248, 108, 197, 0.6)"],
                borderWidth:2,
                borderColor:"#000000"
            }]
        }
    })
}

</script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
</body>
</html>