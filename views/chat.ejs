<div id="userMessages">
</div>
<div id="robotMessages">
</div>
</div>
</div>
<br>
<form action="/askBot" method="POST">
<textarea name="textarea" id="textarea" class="form-control"></textarea>
<br>
<center>
<button type="submit" id="button" class="btn btn-success"><i class="material-icons">send</i></button>
</center>
<a href="/homepage" class="btn btn-primary"><i class="material-icons">logout</i></a>
</form>
